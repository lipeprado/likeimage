= image_tag @post.image.url(:medium)
%h1= @post.title
%p= "Criado por: " + " #{@post.user.name} "
%p= @post.link
%p= @post.description
%p
  = @post.get_upvotes.size
  Gostei
%p
  = @post.get_downvotes.size
  Não Gostei
= link_to "Gostei", curtir_post_path(@post), method: :get
= link_to "Não Gostei", descurtir_post_path(@post), method: :get


#comment
  %h2.comment_count= pluralize(@post.comments.count, "Comentario")
  - @comments.each do |comment|
    .comment
      %p.username= comment.user.name
      %p.content= comment.content

  = render 'comments/form'


= link_to "Voltar", root_path
= link_to "Editar", edit_post_path(@post)
= link_to "Deletar", post_path(@post), method: :delete, data: { confirm: "Você tem certeza?" }
